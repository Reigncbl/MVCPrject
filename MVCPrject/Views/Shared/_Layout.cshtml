<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCPrject</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCPrject.styles.css" asp-append-version="true" />
    <script src="https://unpkg.com/feather-icons"></script>
    @RenderSection("Styles", required: false)
</head>

<body class="d-flex flex-column min-vh-100 overflow-hidden">
    <div class="d-flex">
        <nav class="d-flex flex-column flex-shrink-0 p-4 text-black bg-light border-end"
            style="width: 15vw; height: 100vh;">
            <a class="navbar-brand" href="#"><img src="~/img/logo-colored.png" alt="Logo" class="w-100 mb-5"></a>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Home">Home</a>
                </li>
                <li>
                    <a class="nav-link text-black" asp-area="" asp-controller="Recipe" asp-action="Recipe">Explore</a>
                </li>
                <li>
                    <a class="nav-link text-black" asp-area="" asp-controller="MealPlanner"
                        asp-action="MealPlanner">Meal Planner</a>
                </li>
                <li>
                    <a class="nav-link text-black" asp-area="" asp-controller="Recipe" asp-action="Recipe">Community</a>
                </li>
                <li>
                    <a class="nav-link text-black" asp-area="" asp-controller="Chat" asp-action="Chat">Chat</a>
                </li>
                <li>
                    <a class="nav-link text-black" asp-area="" asp-controller="Profile" asp-action="Profile">Profile</a>
                </li>
            </ul>
            <div class="mt-auto text-muted small border-top pt-3" style="font-size: 0.75rem;">
                <p class="mb-0">Rules | Privacy | User Agreement</p>
                <p class="mb-0">Cooking Ina, Inc. © 2025. All rights reserved.</p>
            </div>
        </nav>

        <div class="flex-grow-1">
            <main role="main">
                @RenderBody()
            </main>
        </div>
        <!-- Floating Buttons & Panels -->
        <div class="floating-buttons-wrapper">
            <!-- Panel Containers -->
            <div class="panels-container">
                <div id="bot-panel" class="panel">
                    <div id="chatbot-container">
                        @await Html.PartialAsync("_ChatbotPartial", new MVCPrject.Models.Chat())
                    </div>
                </div>

                <div id="add-panel" class="panel">
                    <div class="p-4">
                        <h5 class="mb-3">Add New</h5>
                        <p class="mb-4">Add Recipe</p>
                        <button type="button" class="btn btn-secondary w-100" id="add-panel-close">Close</button>
                    </div>
                </div>
            </div>

            <!-- Buttons Container -->
            <div class="floating-buttons">
                <button id="add-panel-btn" class="btn floating-btn">
                    <i data-feather="plus" class="text-white"></i>
                </button>

                <button id="chatbot-open-btn" class="btn floating-btn">
                    <img src="~/img/bot-btn.png" alt="chatbot">
                </button>
            </div>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/site.js"></script>
    <script>
        // Initialize feather icons after the DOM is fully loaded
        document.addEventListener('DOMContentLoaded', function () {
            feather.replace();
        });
    </script>

</body>

</html>